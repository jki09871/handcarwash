<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.carwash.repository.mapper.NotificationMapper">

    <resultMap id="notificationVOMap" type="notificationVO">
        <result property="id" column="ID" />
        <result property="title" column="TITLE" />
        <result property="content" column="CONTENT" />
        <result property="createdAt" column="CREATED_AT" />
        <result property="updatedAt" column="UPDATED_AT" />
        <result property="deletedAt" column="DELETED_AT" />
        <result property="isDeleted" column="IS_DELETED" />
        <result property="hits" column="HITS" />
    </resultMap>

    <insert id="notificationPost" parameterType="notificationVO">
        INSERT INTO NOTIFICATION
                (
                 TITLE
                ,CONTENT
                 )
                VALUES
                (
                  #{title}
                 ,#{content}
                )

    </insert>

    <select id="notificationList" resultMap="notificationVOMap">
        SELECT
              ID
            , TITLE
            , CONTENT
            , CREATED_AT
            , UPDATED_AT
            , DELETED_AT
            , IS_DELETED
            , HITS
        FROM
            NOTIFICATION
    </select>

    <select id="notificationDetail" parameterType="int" resultMap="notificationVOMap">
        SELECT
            ID
             , TITLE
             , CONTENT
             , CREATED_AT
             , UPDATED_AT
             , DELETED_AT
             , IS_DELETED
             , HITS
        FROM
            NOTIFICATION
        WHERE ID = #{id}
    </select>

    <update id="notificationModify" parameterType="notificationVO">
        UPDATE
            NOTIFICATION
        SET
              TITLE = #{title}
            , CONTENT = #{content}
            , UPDATED_AT = current_timestamp
        WHERE
              ID = #{id}
    </update>

    <update id="hitsIncrease" parameterType="int">
        UPDATE
            NOTIFICATION
        SET
            HITS = HITS + 1
        WHERE
            ID = #{id}
    </update>

    <delete id="notificationDelete" parameterType="int">
        DELETE FROM
            NOTIFICATION
        WHERE
            ID = #{id}
    </delete>
</mapper>